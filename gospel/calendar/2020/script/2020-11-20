function print_chten()
{
 daysd.write("<a href=\"http://days.pravoslavie.ru/bible/z_1-sol_5_9_13_5_24_28.html#z\">1 Сол., 272 зач., V, 9-13, 24-28.</a> <a href=\"http://days.pravoslavie.ru/bible/z_lk_12_2_12.html#z\">Лк., 63 зач., XII, 2-12,</a> и за субботу (под зачало): <a href=\"http://days.pravoslavie.ru/bible/z_2-kor_11_1_6.html#z\">2 Кор., 191 зач., XI, 1-6.</a> <a href=\"http://days.pravoslavie.ru/bible/z_lk_9_1_6.html#z\">Лк., 40 зач., IX, 1-6.</a> Прп.: <a href=\"http://days.pravoslavie.ru/bible/z_gal_5_22_0_6_0_2.html#z\">Гал., 213 зач., V, 22 - VI, 2.</a> <a href=\"http://days.pravoslavie.ru/bible/z_mf_4_25_0_5_0_12.html#z\">Мф., 10 зач., IV, 25 - V, 12.</a>");
}

